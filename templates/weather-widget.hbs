
<div class="card">
    <div class="card-block">
        <form class="form-inline" name="changeCity">
            <div class="form-group">
                <input type="text" class="form-control" name="cityName" placeholder="Enter city name">
                <button type="button" name="city-submit" class="btn btn-outline-success">search</button>

                <div class="form-control-feedback hidden">enter more than 3 characters</div>
            </div>
        </form>
    </div>
    <div class="card-block">
        <h4 class="card-title">{{dataWeather.cityName}}, {{dataWeather.countryId}}
            <span class="pull-right">
                <label>
                    <input type="radio" name="weatherType" data-type="metric" {{#if dataWeather.cel}} checked
                           disabled{{/if}}>&deg; C
                </label>
                <label>
                    <input type="radio" name="weatherType" data-type="imperial" {{#if dataWeather.far}} checked disabled{{/if}}>&deg; F
                </label>
            </span>
        </h4>
        <h4 class="card-title">
            <img src="{{dataWeather.img}}.png">
            {{dataWeather.temperature}} {{{dataWeather.sign}}}
            <small class="text-muted">{{dataWeather.weatherDescription}}</small>
        </h4>
        <table class="table">
            <tbody>
            <tr>
                <td>Wind</td>
                <td id="weather-widget-wind">{{dataWeather.windSpeed}} m/s <br> {{dataWeather.windDescription}}
                    ({{dataWeather.windDeg}})
                </td>
            </tr>
            <tr>
                <td>Cloudiness</td>
                <td id="weather-widget-cloudiness">{{dataWeather.cloudsPercent}} %</td>
            </tr>
            <tr>
                <td>Pressure</td>
                <td id="weather-widget-pressure">{{dataWeather.pressure}} hpa</td>
            </tr>
            <tr>
                <td>Humidity</td>
                <td id="weather-widget-humidity">{{dataWeather.humidity }} %</td>
            </tr>
            {{#if dataWeather.rainDescription}}
                <tr id="weather-widget-row-rain">
                    <td>Rain</td>
                    <td id="weather-widget-rain">{{dataWeather.rainDescription}}</td>
                </tr>
            {{/if}}
            <tr>
                <td>Sunrise</td>
                <td id="weather-widget-sunrise">{{dataWeather.sunrise}}</td>
            </tr>
            <tr>
                <td>Sunset</td>
                <td id="weather-widget-sunset">{{dataWeather.sunset}}</td>
            </tr>
            </tbody>
        </table>
        <p class="card-text">
            <small class="text-muted">Last updated {{lastUpdate}}</small>
            <a data-refresh href="#">refresh</a>
        </p>
    </div>

</div>
